<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
  <div class="col-lg-4">
  <h2>User info</h2>


  <h2>New book</h2>
  <%= form_with model: @book_image do |f| %>
  <p>Title</p>
  <div class>
   <%= f.text_field :title %>
   </div>
  <p>Opinion</p>
   <div>
   <%= f.text_area :body, size: "20" %>
  </div>
  <div>
  <%= f.submit 'Create Book', class: "btn btn-info" %>
  </div>
   <% end %>
  </div>

</div>
</div>