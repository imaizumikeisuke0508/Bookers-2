<h2>New book</h2>
    <%= form_with model: Book.new do |f| %>
    <p>Title</p>
    <div class="row">
    <div class="col-md-12">
    <%= f.text_field :title, class: "form-control" %>
    </div>
    </div>
    <p>Opinion</p>
    <div class="row">
    <div class="col-md-12">
    <%= f.text_area :body, class: "form-control" %>
    </div>
    </div>
    <div>
    <%= f.submit 'Create Book', class: "btn btn-info" %>
    </div>
    <% end %>